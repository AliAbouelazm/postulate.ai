// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Note: SQLite doesn't support enums, so we use String with constraints
// Valid values: CREATOR, COMPANY, ADMIN
// Valid values: DRAFT, SUBMITTED, UNDER_REVIEW, ACCEPTED, REJECTED, IN_NEGOTIATION
// Valid values: CREATOR, COMPANY

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?  // Optional for OAuth users
  role      String   @default("CREATOR") // CREATOR, COMPANY, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  ideas     Idea[]
  waitlist  WaitlistEntry?
  company   Company?

  @@index([email])
}

model Company {
  id          String   @id @default(cuid())
  userId      String   @unique
  name        String
  description String?
  website     String?
  industry    String?
  size        String?  // e.g., "1-10", "11-50", "51-200", "201-500", "500+"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model WaitlistEntry {
  id        String   @id @default(cuid())
  userId    String   @unique
  type      String   // CREATOR or COMPANY
  email     String
  name      String?
  company   String?  // For company waitlist
  message   String?  // Optional message
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([type])
  @@index([email])
}

model Idea {
  id          String   @id @default(cuid())
  title       String
  description String   // SQLite doesn't need @db.Text
  category    String?
  tags        String   // Comma-separated tags (SQLite doesn't support arrays)
  status      String   @default("DRAFT") // DRAFT, SUBMITTED, UNDER_REVIEW, ACCEPTED, REJECTED, IN_NEGOTIATION
  submittedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creatorId   String
  creator     User       @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  
  nda         NDA?
  reviews     Review[]

  @@index([creatorId])
  @@index([status])
  @@index([submittedAt])
}

model NDA {
  id            String   @id @default(cuid())
  ideaId        String   @unique
  companyId     String?  // Company reviewing the idea
  signedAt      DateTime?
  expiresAt     DateTime?
  terms         String   // SQLite doesn't need @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  idea          Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@index([ideaId])
}

model Review {
  id          String   @id @default(cuid())
  ideaId      String
  companyId   String?  // Company reviewing
  rating      Int?     // 1-5 rating
  feedback    String?  // SQLite doesn't need @db.Text
  status      String   // "interested", "not_interested", "needs_revision"
  reviewedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  idea        Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@index([ideaId])
  @@index([companyId])
}
